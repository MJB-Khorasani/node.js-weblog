<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= pageTitle %></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <%- include('../partials/stylesheet.ejs') %>
</head>

<body class="text-right">
    <%- include('../partials/menu.ejs') %>
    <div class="container">
        <div class="row">
            <!-- Posts -->
            <main class="posts-listing col-lg-8">
                <div class="container">
                    <div class="row">
                        <% posts.forEach(post => { %>
                            <!-- post -->
                            <div class="post col-xl-6">
                                <div class="post-thumbnail">
                                    <a href="/posts/<%= post.slug %>">
                                        <img src="<%= post.baner %>" alt="عکس مربوط به این پست" class="img-fluid">
                                    </a>
                                </div>
                                <div class="post-details">
                                    <div class="post-meta d-flex justify-content-between">
                                        <div class="date meta-last">
                                            نوشته شده: <%= post.createdAt.toLocaleDateString() %>
                                            <br>
                                            ویرایش شده: <%= post.updatedAt.toLocaleDateString() %>
                                        </div>
                                        <div class="category">
                                            <% post.categories.forEach(category => { %>
                                                <a href="/posts/category/<%= category.title %>">
                                                    <%= category.title %>
                                                </a>
                                            <% }) %>
                                        </div>
                                    </div>
                                    <a href="/posts/<%= post.slug %>">
                                        <h2 class="h4">
                                            <%= post.title %>
                                        </h2>
                                    </a>
                                    <p class="text-muted">
                                        <%= post.description %>
                                    </p>
                                    <footer class="post-footer d-flex align-items-center">
                                        <a href="/posts/user/<%= post.user.id %>" class="author d-flex align-items-center flex-wrap">
                                            <div class="avatar">
                                                <img src="<%= post.thumbnail %>" alt="<%= post.title %>" class="img-fluid">
                                            </div>
                                            <div class="title">
                                                <span>
                                                    <%= post.user.fullname %>
                                                </span>
                                            </div>
                                        </a>
                                        <div class="comments meta-last">
                                            <i class="icon-comment"></i>
                                            <%= post.dataValues.commentsCounter %>
                                        </div>
                                    </footer>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <!-- Pagination -->
                    <%- include('../partials/pagination.ejs') %>
                </div>
            </main>
            <%- include('../partials/widget.ejs') %>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
    <%- include('../partials/javascript.ejs') %>
</body>

</html>